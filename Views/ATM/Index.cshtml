@model Customer
@{
    ViewData["Title"] = "Accounts";
}

    <div>
        <h1 class="display-4">Welcome, @Model.Name</h1>
        <h1 class="display-5">ATM</h1>

        <h3>Your Accounts</h3>
        <table class="table">
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Accounts[0].Balance)</th>
                <th scope="col">Your Actions</th>
            </tr>
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(x => account.AccountNumber)</td>
                    <td class="align-middle">@Html.DisplayFor(x => account.AccountType)</td>
                    <td class="align-middle">@Html.DisplayFor(x => account.Balance)</td>
                    <td class="align-middle">
                        <a class="btn btn-primary select-account-action-btn"
                           asp-action="Deposit" asp-route-id="@account.AccountNumber">Deposit</a>
                        <a class="btn btn-primary select-account-action-btn"
                           asp-action="Withdraw" asp-route-id="@account.AccountNumber">Withdraw</a>
                        <a class="btn btn-primary select-account-action-btn"
                           asp-action="TransferToOther" asp-route-id="@account.AccountNumber">Transfer</a>
                    </td>
                </tr>
            }
        </table>
    </div>
