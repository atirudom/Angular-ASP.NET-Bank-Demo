@model Assignment2.Models.Login

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="changePassword" asp-route-customerid="@Model.CustomerID">
            
            <div class="form-group">
                <label class="control-label">New Password</label>
                <input name="newPassword" class="form-control" />
                <span asp-validation-for="PasswordHash" name="newPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Change password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-customerID="@Model.CustomerID">Back to Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
